 	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="17dp"
        android:text="@string/menu"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btn_ecuaciones"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:text="@string/btn_ecuaciones" />

    <Button
        android:id="@+id/btn_geometria"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:text="@string/btn_geometria" />
    
    <Button
        android:id="@+id/btn_geometriaplana"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:text="@string/btn_geometriaplana" />    
        
    <Button
        android:id="@+id/btn_geometriacomb"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:text="@string/btn_figurascomb" />
    
    <Button
        android:id="@+id/btn_vectores"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:text="@string/btn_vectores" />    
    
</LinearLayout>
